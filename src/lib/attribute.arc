;; ----------------------------------------------------------------------------
;; Base Attribute
;; ----------------------------------------------------------------------------

(deftem base-attr

    name            "unknown"
    value           'empty

    is-readable     't
    is-writeable    't
    is-storeable    't
)

;; ----------------------------------------------------------------------------
;; Numeric Attribute
;; ----------------------------------------------------------------------------

(deftem (numeric-attr base-attr)  ; like class bar : foo { }

    value           0 
    num-type        'int

    min             'empty
    max             'empty
)